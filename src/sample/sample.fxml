<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints maxWidth="239.0" minWidth="208.0" prefWidth="218.0" />
      <ColumnConstraints maxWidth="163.0" minWidth="132.0" prefWidth="153.0" />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label fx:id="titleLabel" prefHeight="48.0" prefWidth="499.0" text="Crypt Tool" textAlignment="CENTER" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
         <font>
            <Font name="System Bold" size="41.0" />
         </font>
      </Label>
      <Label fx:id="msgLabel" text="Message:" GridPane.rowIndex="1" />
      <TextField fx:id="msgField" GridPane.rowIndex="2" />
      <Label fx:id="keyLabel" text="Key:" GridPane.rowIndex="3" />
      <TextArea fx:id="keyArea" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="6" />
      <Label fx:id="hashLabel" text="Hash:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <ChoiceBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button fx:id="hashBtn" mnemonicParsing="false" text="Generate Hash" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <TextField fx:id="hashField" prefHeight="27.0" prefWidth="192.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
      <Label fx:id="encryptionLabel" text="Encryption" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Button fx:id="encryptBtn" mnemonicParsing="false" text="Encrypt" GridPane.columnIndex="1" GridPane.rowIndex="5" />
   </children>
</GridPane>
